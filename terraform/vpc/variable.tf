variable "aws_region" {
  type    = string
  default = "us-east-2"
}

variable "vpc_name" {
  type = string
  default = "tekton-poc"
}

variable "availability_zones" {
  type = list(string)
  default =["us-east-2a", "us-east-2b"]
}

variable "public_inbound_acl_rules" {
  description = "Public subnets inbound network ACLs"
  type        = list(map(string))

  default = [
    {
      rule_number = 100
      rule_action = "allow"
      from_port   = 0
      to_port     = 0
      protocol    = "-1"
      cidr_block  = "0.0.0.0/0"
    },
  ]
}

